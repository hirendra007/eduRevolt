{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {               // <--- NEW: Android specific configuration
        "buildType": "apk"     // <--- SET TO 'apk' to get a direct installable file
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle" // <--- RECOMMENDED: Keep as 'app-bundle' for app store submission
      }
    }
  },
  "submit": {
    "production": {}
  }
}